<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HotelReservationSystem-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/HotelReservationSystem</jta-data-source>
    <class>Entity.Employee</class>
    <class>Entity.SystemAdministrator</class>
    <class>Entity.BookingEntity</class>
    <class>Entity.CustomerEntity</class>
    <class>Entity.EmployeeEntity</class>
    <class>Entity.ReservationEntity</class>
    <class>Entity.RoomEntity</class>
    <class>Entity.RoomRatesEntity</class>
    <class>Entity.RoomTypeEntity</class>
    <class>Entity.TransactionEntity</class>
    <class>Entity.GuestRelationOfficer</class>
    <class>Entity.OperationManager</class>
    <class>Entity.SalesManager</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
